<%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left"></i>
<% end %>

<%# search-bar %>
<%= form_with url: bunkers_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find bunker"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


  <div class="index-map-cont">
    <div class="cards col-6">
      <% @bunkers.each do |bunker| %>
        <div class="bunker col-6">
            <%# if bunker.photo.key.present? %>
              <%= link_to bunker_path(bunker) do %>
                <%#= cl_image_tag bunker.photo.key, height: 100, width: 100, crop: :fill %>
                <h2><%= bunker.title %></h2>
                <%= bunker.summary %>
                <p><%= bunker.price %>â‚¬</p>
                <%= bunker.id %>
              <% end %>
            <%# end %>
        </div>
      <% end %>
    </div>

    <div class="map col-6"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
