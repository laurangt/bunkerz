<head>
  <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'/>
</head>

<body>
  <div class="search-bar">
    <%= link_to root_path do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h1 id="search-bar">Search bar to be added</h1>
  </div>

  <div class="cards" style="margin: auto;">
    <% @bunkers.each do |bunker| %>
      <div class="card mb-3 p-2 d-flex col-6" style="height: 100%; width: 50vw; text-align: center">
          <% if bunker.photo.key.present? %>
            <%= link_to bunker_path(bunker) do %>
              <%= cl_image_tag bunker.photo.key, height: 100, width: 100, crop: :fill %>
              <h2><%= bunker.title %></h2>
              <%= bunker.summary %>
              <p><%= bunker.price %>â‚¬</p>
              <%= bunker.id %>
            <% end %>
          <% end %>
      </div>
    <% end %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</body>
